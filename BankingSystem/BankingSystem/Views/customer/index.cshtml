
@{
    ViewData["Title"] = "index";
    Layout = "/Views/Shared/_Layout.cshtml";
}


<link href="/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
        <section id="services" class="section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 text-center">
                        <div class="section-title">
                            <h1>Our <span class="colored-text" id="list">Customers</span></h1> 
                            <span class="border-line"></span>
                           
                        </div>
                    </div>
                </div><!-- title row end-->
            @if(ViewBag.transfer == true)
            {
              <div class="alert alert-success" role="alert">
                   Money transferred successfully
              </div>
            }
                <div class="row">
                    <div class="col-sm-12 margin-bottom30">
                    <table id="CustomerList" class="table table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>Account number</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Email</th>
                                <th>Balance in $</th>
                                <th>Details</th>
                            </tr>
                            
                        </thead>
                    </table>
                    </div><!--services col-->
                 
                </div><!--services row-->

            </div>
        </section><!--services section end-->
        @section scripts
        {
                 <script src="/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="/lib/datatables/js/dataTables.bootstrap4.js"></script>
        <script type="text/javascript"src="/js/CustomerList.js">
          
          </script>
        }

